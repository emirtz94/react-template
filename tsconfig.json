{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./",
        //"baseUrl": "",
        "lib": ["dom", "ES6"],
        "target": "ES6",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "composite": true,
        "noEmitOnError": true,
        "noEmit": false,
        "emitDeclarationOnly": false,
        "skipLibCheck": true,
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "webpack.*.ts"]
}